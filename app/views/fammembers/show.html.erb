<h1>Welcome back <%= @user.first_name %></h1>

<li><%= link_to "Search", new_search_path %></li>
<li><%= link_to "All transactions", transactions_path %></li>
<li><%= link_to "New patient", new_fammember_patient_path(@user) %></li>

<div class="container">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Review</th>
      <th>Rating</th>
      <th>User</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review.each do |review| %>
      <tr>
        <td><%= review.comment %></td>
        <td><div class = "star-rating" data-score= <%= review.rating %></div></td>
        <td><%= review.user_id %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<h1>List of Patients</h1>

<table>
  <thead>
    <tr>
      <th>first_name</th>
      <th>last_name</th>
      <th>address</th>
      <th>gender</th>
      <th>frequency</th>
      <th>condition_description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.address %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.frequency %></td>
        <td><%= patient.condition_description %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'New Review', new_review_path %>

<script>
  $('.star-rating').raty({
    path: '/assets',
    readOnly: true,
    score: function() {
        return $(this).attr('data-score');
    }
  });
</script>
