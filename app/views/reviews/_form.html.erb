  <% end %>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <div class="field">
    <div id="star-rating"></div>
  </div>

  <div class="field">
    <%= f.label :usertype %>
    <%= f.text_field :usertype %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.number_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

